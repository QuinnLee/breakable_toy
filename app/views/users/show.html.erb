user#show

<%= pluralize(current_user.log_entries.size,'Destination') %>
<%if current_user.log_entries.size > 0 %>
  <h1>Log</h1>
      <table>
        <tr>
          <th>Name</th>
          <th>Date Visited</th>
        </tr>
      <% @user.log_entries.each do |log_entry| %>
        <tr>
          <td><%= link_to "#{log_entry.location.name}", log_entry.location %></td>
          <td><%= log_entry.first_date %></td>
        </tr>
      <% end %>
  </table>
<% end %>

<%= simple_form_for ([@user,@plan]) do |f| %>
  <%= f.input :name %>
  <br>
  <%= f.button :submit %>
<% end %>
<br>

<h3><%= pluralize(@plans.size, 'Plan') %></h3>
<% if @plans.size > 0 %>
  <table>
    <tr>
      <th>Plan Name</th>
    </tr>
    <% @plans.each do |plan| %>
    <tr>
      <td><%= link_to "#{plan.name}", user_plan_path(@user, plan) %></td>
      <br>
    </tr>
  </table>
  <% end %>
<% end %>
